<main class="newproductpage">
    <h3>Please Fill out the Form to add your Product to your Department</h3>
    <form action="/Store/Products/" method="post">
        Choose a Department For Your Product <select name="deptId">
            <% depts.forEach(department => { %>
             <option value="<%= department._id %>"><%= department.name %> </option>
            <% }) %>
        </select> <br />
        Name: <input type="text" name="name" required> <br />
        Manufacturer: <input type="text" name="manufacturer" required> <br />
        Price: <input type="text" name="price" required>
        In Stock: <input type="checkbox" name="inStock"> <br />
        <input type="submit" value="Add Product">
    </form>
</main>