<main class="showDept">
    <h3>Welcome to <%= Dept.name %> Department</h3>
    <h5>This Department Sells <%= Dept.productType %> Products.</h5>
    <section>
        <h3>Products</h3>
        <div class="container">
            <% Dept.products.forEach(product => { %>
                <div class="card" style="width: 18rem;">
                    <img src="<%=product.img%>" class="card-img-top" alt="No Product Image">
                    <div class="card-body">
                      <h5 class="card-title"><%= product.name %></h5>
                      <a href="/Store/Products/<%=product._id %>" class="btn btn-primary">Go To Product</a>
                    </div>
                  </div><br />
            <% }) %>
        </div> <br />
        <a href="/Store/Depts/<%=Dept._id %>/edit">Edit Department Info</a>
        <form action="/Store/Depts/<%=Dept._id%>?_method=DELETE" method="POST">
            <input type="submit" value="Delete Department">
        </form>
    </section>
</main>