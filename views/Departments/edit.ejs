<main class="editDept">
    <h3>Edit Your Department</h3>
    <body class="text-center">
        <form class="form-signin" action="/Store/Depts/<%=Dept._id%>?_method=PUT" method="POST">
      <label for="inputName" class="sr-only">Email address</label>
      <input type="text" name="name" id="inputName" class="form-control" value="<%=Dept.name%>" placeholder="Name" required="" autofocus="">
      
      <label for="inputProductType" class="sr-only">Password</label>
      <input type="text" name="productType" id="inputProductType" class="form-control" value="<%=Dept.productType%>" placeholder="Product Type" required="">

      <label for="inputImage" class="sr-only">Password</label>
      <input type="text" name="img" id="inputImage" class="form-control" value="<%=Dept.img%>" placeholder="Image" required="">
      
      <button class="btn btn-lg btn-warning btn-block" type="submit">Submit Changes</button>
    </form>
    
    
    </body>
</main>